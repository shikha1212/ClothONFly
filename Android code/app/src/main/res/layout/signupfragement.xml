<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupFragment">

    <!--<TextView-->
            <!--android:id="@+id/largeLabel"-->
            <!--android:layout_width="464dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:text="Cloth On Fly"-->
            <!--android:textSize="30sp"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--tools:layout_editor_absoluteY="-4dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
            <!--android:background="#97B8C2" android:scaleX="1" android:scrollHorizontally="false"/>-->

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#97B8C2"
            android:background="#97B8C2"
            android:text="Cloth On Fly"/>


    <!--android:layout_marginStart="8dp"/>-->

    <Button
            android:id="@+id/confirm_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="412dp"
            android:layout_height="50dp"
            android:layout_marginTop="604dp"
            android:text="Confirm" app:backgroundTint="#97B8C2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:cursorVisible="false" app:iconTint="#00FCFCFC"/>



    <EditText
            android:id="@+id/user_name"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
            android:id="@+id/password"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="152dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter your passowrd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"/>

    <EditText
            android:id="@+id/firstname"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="224dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="John"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"/>

    <EditText
            android:id="@+id/lastname"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="300dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Doe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"/>

    <EditText
            android:id="@+id/email"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="524dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="JohnDoe@utexas.edu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/address"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="452dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="123 Main Street, Austin, TX"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/phonenum"
            android:layout_width="283dp"
            android:layout_height="60dp"
            android:layout_marginTop="372dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="5123456789"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>